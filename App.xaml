<Application x:Class="ReName.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ReName"
             xmlns:pu="clr-namespace:Panuon.UI.Silver;assembly=Panuon.UI.Silver"
             xmlns:purs="clr-namespace:Panuon.UI.Silver.Resources;assembly=Panuon.UI.Silver"
             xmlns:pucp="clr-namespace:Panuon.UI.Silver.Components;assembly=Panuon.UI.Silver"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Panuon.UI.Silver;component/Control.xaml" />
                <ResourceDictionary Source="lang\DefaultLanguage.xaml" />
                <ResourceDictionary Source="color\DefaultColor.xaml" />
                <ResourceDictionary Source="style\Style.xaml" />
                <ResourceDictionary>
                    <pu:GlobalSettings x:Key="globalSettings"
                     FontFamily="pack://application:,,,/MyLibrary;component/Resources/Fonts/#OPPOSans R"
                     FontSize="16" />
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>